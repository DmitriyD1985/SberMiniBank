<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <servlet>
    <servlet-name>enter</servlet-name>
    <servlet-class>servlets.EnterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>enter</servlet-name>
    <url-pattern>/enter</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>registration</servlet-name>
    <servlet-class>servlets.RegistrationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>registration</servlet-name>
    <url-pattern>/registration</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>refillAccount</servlet-name>
    <servlet-class>servlets.RefillAccount</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>refillAccount</servlet-name>
    <url-pattern>/refillAccount</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>transferServlet</servlet-name>
    <servlet-class>servlets.TransferServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>transferServlet</servlet-name>
    <url-pattern>/transfer</url-pattern>
  </servlet-mapping>
</web-app>